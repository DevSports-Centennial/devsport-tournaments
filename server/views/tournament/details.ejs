<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Creator's Name" name="name" value="<%= tournament.Name %>" required>
              </div>
              <div class="form-group">
                <label for="sportsTextField">Sports</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Sports" name="sports" value="<%= tournament.Sports %>"  required>
              </div>
              <div class="form-group">
                <label for="DetailsTextField">Details</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Match details" name="details" value="<%= tournament.Details %>"  required>
              </div>
              <div class="form-group">
                <label for="MatchesTextField">Matches</label>
                <input type="text" class="form-control" id="MatchesTextField"
                placeholder="Tournament Matches" name="matches" value="<%= tournament.Matches %>"  required>
              </div>
              <div class="form-group">
                <label for="PrizepoolTextField">Prizepool</label>
                <input type="text" class="form-control" id="PrizepoolTextField"
                placeholder="Tournament Prizepool" name="prizepool" value="<%= tournament.Prizepool %>"  required>
              </div>


              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/tournament" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>