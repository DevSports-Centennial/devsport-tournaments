<%/**
 * list.ejs
 * Due Date: March 18, 2022
 *
 * @link   list.ejs
 * @file   This file defines the Tournament List Page with a grid and some buttons (add, edit and delete).
 * @author DevSports
 * @since  1.0.0
 */%>

 <% if(typeof displayName == 'string' && displayName) { %> 
<% include ../partials/header.ejs %>

<main style="height: max-content;">
    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Tournaments </h3>
          <% if(typeof displayName == 'string' && displayName) { %>
          <!-- Add button -->
          <a href="/tournament/add" class="btn btn-primary" role="button">
            <i class="fa fa-plus"></i> Add Tournament</a>
          <% } %>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              
                <tr>
                <% if(typeof displayName == 'string' && displayName) { %>
                  <th class="text-center" scope="col">Name</th>
                  <th class="text-center" scope="col">Sports</th>
                  <th class="text-center" scope="col">Details</th>
                  <th class="text-center" scope="col">Matches</th>
                  <th class="text-center" scope="col">Prizepool</th>
                  <th class="text-center" scope="col"></th>
                  <th class="text-center" scope="col"></th>
                <% } else { %>
                  <th class="text-center" scope="col">Name</th>
                  <th class="text-center" scope="col">Sports</th>
                  <th class="text-center" scope="col">Details</th>
                  <th class="text-center" scope="col">Matches</th>
                  <th class="text-center" scope="col">Prizepool</th>
                <% } %>
                </tr>
               
               
                <!-- Template Row -->
              <% for (let count = 0; count < tournamentList.length; count++) { %>
                <tr>
                <% if(typeof displayName == 'string' && displayName) { %>
                  <td class="text-center"><%= tournamentList[count].Name %></td>
                  <td class="text-center"><%= tournamentList[count].Sports %></td>
                  <td class="text-center"><%= tournamentList[count].Details %></td>
                  <td class="text-center"><%= tournamentList[count].Matches %></td>
                  <td class="text-center">$<%= tournamentList[count].Prizepool %> CAD</td>
                  
                  <!-- Edit button -->
                  <td class="text-center">
                    <a href="/tournament/edit/<%= tournamentList[count]._id %>"class="btn btn-primary"><i class="fa fa-plus"></i> Edit</a>
                  </td>
                  
                  <!-- Delete button -->
                  <td class="text-center">
                    <a href="/tournament/delete/<%= tournamentList[count]._id %>" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Delete</a>
                  </td>
                <% } else { %>
                  <td class="text-center"><%= tournamentList[count].Name %></td>
                  <td class="text-center"><%= tournamentList[count].Sports %></td>
                  <td class="text-center"><%= tournamentList[count].Details %></td>
                  <td class="text-center"><%= tournamentList[count].Matches %></td>
                  <td class="text-center">$<%= tournamentList[count].Prizepool %> CAD</td>
                <% } %>
                </tr>
              <% } %> 
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>
  
  </main>

<% include ../partials/footer.ejs %>

<% } else { %>
  <script> document.location.href = '/login' </script>
<% } %>  